<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <logger name="org.reflections.Reflections" level="OFF"/>
    <logger name="org.mongodb.driver.cluster" level="OFF"/>
    <logger name="org.mongodb.driver.connection" level="OFF"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss, -5}] %boldRed([%thread]) %boldBlue([%logger{0}]) %level : %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>